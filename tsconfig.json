{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./public",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["api/v1/*"]
    }
  },
  "include": ["types/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
